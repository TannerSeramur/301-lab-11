<link rel="stylesheet" href="styles/books.css">
<!-- show saved books -->
<h5>My Books Count: <%=savedItems.length%> </h5>
<div id="books-db-container">
        <%savedItems.forEach((item) => { %>
            <section>
                <form action="/book/<%=item.id%>" method="POST">
                    <img src="<%=item.image_url%>" alt="">
                    <div id="titleAuthor">
                        <h6><%=item.title%></h6>
                        <h3>by: <%=item.author%></h3>
                        <input type="submit" name="method" value="MORE" id="addBtn">
                        <input type ="button" class='desc' id="descBtn" onclick="myFunc('desc')" value= "EDIT">
                    </div>
                    <input type="hidden" name='id' value='<%= item.id %>'>
                    <input type="hidden" name='title' value='<%= item.title %>'>
                    <input type="hidden" name='author' value='<%= item.author %>'>
                    <input type="hidden" name='isbn' value='<%= item.isbn %>'>
                    <input type="hidden" name='image_url' value='<%= item.image_url %>'>
                    <input type="hidden" name='bookdescription' value='<%= item.bookdescription %>'>
                    <input type="hidden" name='bookshelf' value='<%= item.bookshelf %>'>
                </form>
                <div class="popup-container" id= "popup" onclick="closePop()">
                    <div class="popup">
                        <form id='edit' action="/" method="POST">
                            <input type="text" placeholder="Add To Bookshelf">
                            <textarea id="commentTextBox" name="" id="" cols="30" rows="10"></textarea>
                            <input type="submit" value="Update">
                            <input type="hidden" name="_method" value="PUT" id="putForm">
                        </form>

                    </div>
                </div>
                </div>
            </section>
        <%});%>

        <script>
                console.log('getting here');
                var login = document.getElementById("popup")
                var myFunc = function(type){
                    console.log('open');
                    login.classList.add("isvisable");
                }

                var closePop = ()=>{
                if(event.currentTarget === event.target){
                    
                    login.classList.remove("isvisable")
                }
            
                }
            </script>
</div>


